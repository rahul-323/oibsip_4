<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_1"
    android:padding="24sp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_question"
        android:text="Total Questions"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12sp"
        android:textSize="32sp"
        />

    <TextView
        android:id="@id/actual_questions"
        android:layout_width="311dp"
        android:layout_height="37dp"
        android:layout_below="@id/total_question"
        android:layout_marginTop="75dp"
        android:text="Options Are :-"
        android:textColor="@color/black"

        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/actual_questions"
        android:layout_centerVertical="true"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/ans_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#FFC107"
            android:text="Answer A"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/ans_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="#FFC107"
            android:text="Answer B"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/ans_C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="#FFC107"
            android:text="Answer C"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/ans_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="#FFC107"
            android:text="Answer D"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ans_d"
            android:layout_marginLeft="100sp"
            android:backgroundTint="#521357"
            android:gravity="center"
            android:text="Submit"
            android:textColor="#66C513"
            android:textSize="25sp"
            android:textStyle="italic" />

    </LinearLayout>


</RelativeLayout>